<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<AnchorPane fx:id="anchorPane" prefHeight="524.0" prefWidth="671.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.whiteboard.controller.BoardController">
   <children>
      <Button fx:id="backBtn" layoutX="8.0" layoutY="7.0" mnemonicParsing="false" onAction="#goBack" text="leave" />
      <VBox fx:id="messagesArea" layoutX="6.0" layoutY="407.0" prefHeight="85.0" prefWidth="697.0">
         <children>
            <ListView fx:id="messagesList" prefHeight="200.0" prefWidth="200.0" />
         </children></VBox>
      <Label layoutX="8.0" layoutY="389.0" prefHeight="18.0" prefWidth="66.0" text="Messages" />
      <TextField fx:id="messageTextField" layoutY="491.0" prefHeight="31.0" prefWidth="651.0" />
      <Button fx:id="sendMessageBtn" layoutX="649.0" layoutY="491.0" minWidth="11.0" mnemonicParsing="false" onAction="#createMessage" prefHeight="31.0" prefWidth="11.0" text="send" />
      <FlowPane layoutX="596.0" prefHeight="307.0" prefWidth="166.0">
         <children>
            <Button fx:id="lineBtn" mnemonicParsing="false" onAction="#createLine" prefHeight="31.0" prefWidth="78.0" text="Line" />
            <Button fx:id="circleBtn" mnemonicParsing="false" onAction="#createCircle" prefWidth="78.0" text="Circle" />
            <Button fx:id="rectangleBtn" mnemonicParsing="false" onAction="#createRectangle" prefWidth="78.0" text="Rectangle" />
            <Button fx:id="triangleBtn" mnemonicParsing="false" onAction="#createTriangle" prefWidth="78.0" text="Triangle" />
            <Button fx:id="redoBtn" mnemonicParsing="false" onAction="#redo" prefHeight="31.0" prefWidth="78.0" text="Redo" />
            <Button fx:id="undoBtn" mnemonicParsing="false" onAction="#undo" prefWidth="78.0" text="Undo" />
            <Button fx:id="txtBtn" mnemonicParsing="false" onAction="#createText" prefHeight="31.0" prefWidth="156.0" text="Text" />
            <Label text="Fill" />
            <ColorPicker fx:id="fillColor" onAction="#fillColorChangedHandle" prefHeight="27.0" prefWidth="166.0">
               <value>
                  <Color />
               </value>
            </ColorPicker>
            <Label text="Outline" />
            <ColorPicker fx:id="strokeColor" onAction="#outlineColorChangedHandle" prefHeight="27.0" prefWidth="155.0">
               <value>
                  <Color />
               </value>
            </ColorPicker>
            <Label text="Font" />
            <ChoiceBox fx:id="fontChoiceBox" prefWidth="150.0" />
            <Label text="Font Size" />
            <TextField fx:id="fontSizeTextField" />
         </children>
      </FlowPane>
      <Canvas fx:id="canvas" height="352.0" layoutY="40.0" width="596.0" />
   </children>
</AnchorPane>
